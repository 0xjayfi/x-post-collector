# Discord Configuration
# Get your bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Get channel ID by enabling Developer Mode in Discord settings
# Right-click on the channel and select "Copy ID"
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Google Sheets Configuration
# The ID is in the Google Sheets URL: https://docs.google.com/spreadsheets/d/{SHEETS_ID}/edit
GOOGLE_SHEETS_ID=your_google_sheets_id_here

# Path to Google Service Account JSON key file
# Create service account at https://console.cloud.google.com/apis/credentials
GOOGLE_SERVICE_ACCOUNT_FILE=credentials.json

# Google Sheet tab name (default: Sheet1)
GOOGLE_SHEET_NAME=Sheet1

# Optional: Batch size for uploads
SHEETS_BATCH_SIZE=100

# Schedule Configuration (24-hour format)
SCHEDULE_TIME=20:00

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=logs

# Gemini AI Configuration
# Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model to use (gemini-1.5-flash for free tier)
GEMINI_MODEL=gemini-1.5-flash

# Daily request limit (conservative to stay under free tier)
GEMINI_DAILY_LIMIT=1400